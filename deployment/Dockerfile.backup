FROM percona/percona-xtrabackup:8.0

RUN microdnf install -y \
        bash \
        cronie \
        awscli \
        ca-certificates \
        tzdata \
        tar \
    && microdnf clean all

WORKDIR /scripts
COPY scripts/backup/ /scripts/
RUN chmod +x /scripts/*.sh

ENTRYPOINT ["/bin/bash", "/scripts/entrypoint.sh"]
